
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Cadastro</h1>

    <%= form_for(:collection, url: "/collections", method:"post") do |f| %>

      <%= f.label :nome %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Novo", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
