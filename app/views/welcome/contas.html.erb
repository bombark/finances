<h1> Contas </h1>
<table class='table'>
	<tr>
		<th>Para</th>
		<th>Valor</th>
	</tr>

	<%for conta in @predio.contas%>
		<tr>
			<td><%=link_to(conta.to.name,conta.to.path)%></td>
			<td><%=conta.value%></td>
		</tr>
	<%end%>
	<tr>
		<td></td>
		<td>0</td>
	</tr>
</table>


<h1> Contas divididas por Apartamento </h1>
<table class="table">
	<tr>
		<th>Apartamento</th>
		<%for conta in @predio.contas%>
				<th><%=conta.to.name%></th>
		<%end%>
	</tr>


<%for apto in @aptos%>
	<tr>
		<td><%=apto.name%></td>
		<%for conta in @predio.contas%>
				<td><%=sprintf("%.2f",conta.value/@aptos.length)%></td>
		<%end%>
	</tr>
<%end%>
</table>
